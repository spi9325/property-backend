
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id        String    @id @default(cuid())
  propertyName     String    @unique
  propertyPrice    Float
  propertyLocation String
  propertyInfo     String
  createdAt DateTime  @default(now())
}

model BasicData {
  id            String         @id @default(cuid())
  Name          String
  Email         String         @unique
  Age           String
  Projects      String
  Experience    String
  Location      String
  Role          String

  HeroData      HeroData?
  About         About?
  Services      Service[]
  Testimonials  Testimonial[]
  Skill         Skill[]
}

model HeroData {
  id        String     @id @default(cuid())
  Title     String
  Tagline   String
  Profile   String
  Image     String

  Email     String     @unique
  basicData BasicData  @relation(fields: [Email], references: [Email])
}

model About {
  id        String     @id @default(cuid())
  Bio       String
  Social    String[]

  Email     String     @unique
  basicData BasicData  @relation(fields: [Email], references: [Email])
}

model Service {
  id          String     @id @default(cuid())
  Service     String
  Description String

  Email       String
  basicData   BasicData  @relation(fields: [Email], references: [Email])
}

model Testimonial {
  id        String     @id @default(cuid())
  Client    String
  Review    String

  Email     String
  basicData BasicData  @relation(fields: [Email], references: [Email])
}
model Skill {
  id        String     @id @default(cuid())
  Title     String     @unique
  SkillOne  String
  SkillTwo  String
  SkillThird String
  RatingOne String
  RatingTwo String
  RatingThird String
  Email     String
  basicData BasicData  @relation(fields: [Email], references: [Email])
}
